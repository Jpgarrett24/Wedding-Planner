@model Wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Wedding Planner</title>
</head>
<body>
    <main>
        <section>
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <span asp-validation-for="User.FirstName" class="error"></span>
                <label asp-for="User.FirstName"></label>
                <input asp-for="User.FirstName">
                <br>
                <span asp-validation-for="User.LastName" class="error"></span>
                <label asp-for="User.LastName"></label>
                <input asp-for="User.LastName">
                <br>
                <span asp-validation-for="User.Email" class="error"></span>
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email">
                <br>
                <span asp-validation-for="User.Password" class="error"></span>
                <label asp-for="User.Password"></label>
                <input asp-for="User.Password">
                <br>
                <span asp-validation-for="User.Confirm" class="error"></span>
                <label asp-for="User.Confirm"></label>
                <input asp-for="User.Confirm">
                <br>
                <button>Register!</button>
            </form>
        </section>
        <section>
            <h3>Login</h3>
            <form asp-action="Login" asp-controller="Home" method="POST">
                <span asp-validation-for="LoginUser.LoginEmail"></span>
                <br>
                <label asp-for="LoginUser.LoginEmail"></label>
                <input asp-for="LoginUser.LoginEmail">
                <br>
                <label asp-for="LoginUser.LoginPassword"></label>
                <input asp-for="LoginUser.LoginPassword">
                <br>
                <button>Login</button>
            </form>
        </section>
    </main>
</body>
</html>